<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayLink2.CardDetailsPage"
             Title="Card Details">
            <StackLayout Margin="10" BackgroundColor="#EDEDED" Padding="10">
                <Label Text="Raiffeisen Debit Card" FontSize="30" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" />
                <BoxView Color="Green" HeightRequest="2" HorizontalOptions="StartAndExpand" Margin="0,5,0,10" />
                <Image Source="card.png" HeightRequest="200" HorizontalOptions="CenterAndExpand" />

                <Label Text="Available Balance:" FontAttributes="Bold" FontSize="10" />
                <Label Text="$68.79" FontAttributes="Bold" FontSize="20" />

                <Label Text="Expiration Date:" FontAttributes="Bold" FontSize="10"  />
                <Label Text="03/2027" FontAttributes="Bold" FontSize="20" />

                <Label Text="Card Number:" FontAttributes="Bold" FontSize="10"  />
                <Label Text="9145 2460 5465 2972" FontAttributes="Bold" FontSize="20" />

                <Label Text="Billing address" FontAttributes="Bold" FontSize="10" />
                <Label Text="Sägetweg 7" FontAttributes="Bold" FontSize="20" />
                <Label Text="8500 Frauenfeld" FontAttributes="Bold" FontSize="20" />

            </StackLayout>
</ContentPage>
